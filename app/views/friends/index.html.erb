<p style="color: green"><%= notice %></p>

<h1>Friend List</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>
        <% @friends.each do |friend| %>
          <%= friend.first_name %>
        <% end %>
      </td>
      <td>
        <% @friends.each do |friend| %>
          <%= friend.last_name %>
        <% end %>
      </td>
      <td>
        <% @friends.each do |friend| %>
          <%= friend.email %>
        <% end %>
      </td>
      <td>
        <% @friends.each do |friend| %>
          <%= friend.phone %>
        <% end %>
      </td>
      <td>
        <% @friends.each do |friend| %>
          <%= friend.twitter %>
        <% end %>
      </td>
      <td>
        <% @friends.each do |friend| %>
          <%= link_to "Show this friend", new_friend_path %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path %>
